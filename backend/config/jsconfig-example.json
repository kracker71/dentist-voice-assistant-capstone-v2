{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "node16",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["/**/*.*.js", "/**/*.*.d.ts", "/**/*.d.ts"],
  "exclude": ["node_modules"]
}
